<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h2>Form is invalid</h2>
      <%= render 'shared/errors', :object => @user %>
    <% else %>

  <%= f.label :email %>
  <%= f.text_field :email %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> <br />

  <%= f.submit "Sign Up" %>
  <% end %>
<% end %>
